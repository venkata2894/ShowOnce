# ShowOnce Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# REQUIRED: Anthropic API Key
# ===========================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# ===========================================
# OPTIONAL: Configuration
# ===========================================

# Model to use for vision analysis (default: claude-sonnet-4-20250514)
CLAUDE_MODEL=claude-sonnet-4-20250514

# Maximum tokens for API responses (default: 4096)
MAX_TOKENS=4096

# ===========================================
# OPTIONAL: Paths
# ===========================================

# Directory to store recorded workflows (default: ./workflows)
WORKFLOWS_DIR=./workflows

# Directory for generated scripts (default: ./generated)
OUTPUT_DIR=./generated

# ===========================================
# OPTIONAL: Capture Settings
# ===========================================

# Hotkey to capture screenshot (default: ctrl+shift+s)
CAPTURE_HOTKEY=ctrl+shift+s

# Hotkey to stop recording (default: ctrl+shift+q)
STOP_HOTKEY=ctrl+shift+q

# Screenshot format: png or jpg (default: png)
SCREENSHOT_FORMAT=png

# Screenshot quality for jpg: 1-100 (default: 95)
SCREENSHOT_QUALITY=95

# ===========================================
# OPTIONAL: Generation Settings
# ===========================================

# Default automation framework: playwright, selenium, pyautogui (default: playwright)
DEFAULT_FRAMEWORK=playwright

# Browser for Playwright: chromium, firefox, webkit (default: chromium)
BROWSER_TYPE=chromium

# Run browser in headless mode: true/false (default: false)
HEADLESS=false

# ===========================================
# OPTIONAL: Logging
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Log file path (default: None, logs to console only)
LOG_FILE=
